# Allow all build scripts for performance packages
auto-install-peers=true
shamefully-hoist=true
strict-peer-dependencies=false

# Approve trusted build scripts
enable-pre-post-scripts=true

# Explicitly approve build scripts for required packages (pnpm 9+)
# This fixes the "Ignored build scripts" warning in Vercel deployments
# These are trusted packages necessary for image optimization and build process
ignore-scripts=false
